<% category = allergen.category %>
<% substances = allergen.substances.split(";") %>
<div id="shadow" class="panel">
  <div id="index-panel-heading" class="panel-heading">
    <div class="panel-title">
      <!-- Split button -->
      <div class="btn-group">
        <button type="button" id="index-panel-button" class="btn btn-primary"><%= category %></button>
        <% if index_view %>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit   ", edit_allergen_path(category)%></li>
            <li><%= link_to "Delete   ", allergen_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this Allergen?"}%></li>
          </ul>
        <% end %>
      </div>
      <!--  -->
    </div>
  </div>
  <div class="panel-body">
    <% substances.each do |substance| %>
      <div class="substances text-color-not-ok">
        <%= substance %>
      </div>
    <% end %>
  </div>
</div>


