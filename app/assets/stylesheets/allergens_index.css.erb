body {
  background-image: url(<%= asset_path 'background-1.jpg' %>);
  background-size:auto 100% no-repeat;
  /* background-color and background-blend-mode impact opacity */
  background-color: rgba(255, 255, 255, .85) !important;
  background-blend-mode: color;
}

.panel-wrapper {
  margin: auto;
}

#custom-panel {
  display: block;
  height: 300px; /* panel-body height + panel-heading height = panel-height */
  width: 30%;
  margin-left: 2%;
  float: left;
  box-shadow: 4px 4px 1px rgba(0, 0, 0, 0.1);
}

#custom-panel-heading {
  padding: 0;
  position: relative;
  text-align: center;
  font-size: 1.6rem;
  font-weight: bold;
  height: 75px; /* panel-body height + panel-heading height = panel-height */
}

.panel-btn {
    white-space: normal;
    height: 75px;
    width: 100%;
    background-color: #c8d7e4;
}

#panel-dropdown {
  position: absolute;
  min-width: auto;
  padding: 10px 10px;
  text-align: center;
  margin-left: 40%;
  margin-top: -5%;
}

#edit-trash-icons {
  float: left;
  color: #337ab7;
}

.panel-title {
  font-size: 1rem;
}

.allergen-actions {
  position: absolute;
  top: 50px;
  left: 35%;
  text-align: center;
}

.panel-body {
  height: 225px; /* panel-body height + panel-heading height = panel-height */
  overflow-y:auto;
  background-color: #e4edf5;
}

#substance {
  display: block;
  text-align: center;
  padding-left: 5px;
  padding-right: 5px;
  letter-spacing: -1px;
}
/*------------------*/
@media (max-width: 768px) {

  .panel {  
    width: 40%;
    float: left;
  }

}