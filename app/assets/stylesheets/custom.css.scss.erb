$navbar-default-bg: #4d6579; /* color of navbar #708290 */
@import "bootstrap-sprockets";
@import "bootstrap";
/*@import url("whitespace-reset.css");*/

* {
  box-sizing: border-box;
}

#logo {
  float: left;
  font-size: 2.75em;
  color: white;
  text-transform: uppercase;
  letter-spacing: -1px;
  font-weight: bold;
  /*background: transparent url(background-logo.jpg) 100% 100% no-repeat; */
  background: transparent url(<%= asset_path 'background-logo.jpg' %>) 100% 100% no-repeat ;
}

#link-desc > a {
  font-size: 1.3em;
  font-weight: bold;
  color: white;
}

#link-desc a:hover {
  cursor: pointer;
  background-color: #8297a8;
}

.center-heading {
  text-align: center;
  font-size: 1.7em;
  color: #00334d;
  text-transform: uppercase;
  letter-spacing: -1px;
  font-weight: bold;
}

.center {
  text-align: center;
  clear: left;
}



